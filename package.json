{
  "name": "doppio",
  "version": "0.0.0",
  "description": "doppio tracking",
  "main": "index.js",
  "scripts": {
    "test": "tape tests/*",
    "dev": "npm run build:index & npm run watch:css & npm run preview",
    "preview": "DEBUG=$([ ! -z \"$DEBUG\" ] && echo \"$DEBUG\" || echo \"doppio:*\") NODE_ENV=preview BUNDLE=\"bundle-${npm_package_version}.js\" npm run preview:server",
    "preview:server": "./node_modules/.bin/beefy --cwd public src/js/bootstrap.js:${BUNDLE} 8080 -- --extension=.js --extension=.jsx --extension=.json -d -t [ babelify --loose all ] -t envify",
    "build": "DEBUG=\"\" NODE_ENV=production npm run build:all",
    "build:all": "npm run build:css && npm run build:js && npm run build:manifest && npm run build:index",
    "build:js": "./node_modules/.bin/browserify src/js/bootstrap.js --extension=.js --extension=.jsx --extension=.json -t [ babelify --loose all ] -t envify > public/bundle-$npm_package_version.js",
    "build:css": "./node_modules/.bin/postcss -u cssnext -o public/style-${npm_package_version}.css src/css/global.css",
    "build:manifest": "echo TODO: build manifest",
    "build:index": "sed -e \"s/__VERSION__/${npm_package_version}/\" < src/html/index.html > public/index.html",
    "watch:css": "./node_modules/.bin/cssnext -w src/css/global.css public/style-${npm_package_version}.css"
  },
  "keywords": [
    "espresso",
    "doppio",
    "coffee"
  ],
  "author": "Niklas Lindgren <nikc@iki.fi>",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.4.7",
    "babel-core": "^5.8.21",
    "babel-plugin-object-assign": "^1.2.1",
    "babelify": "^6.1.3",
    "beefy": "^2.1.5",
    "browserify": "^10.2.1",
    "cssnext": "^1.5.1",
    "envify": "^3.4.0",
    "postcss-cli": "^1.3.1",
    "tape": "^4.0.0"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "react": "^0.13.3",
    "react-redux": "^0.2.2",
    "redux": "^1.0.0-rc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nikcorg/doppio.git"
  },
  "homepage": "http://doppio.kakspistenolla.com",
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },

    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "classes": true,
      "blockBindings": true
    },

    "plugins": [
      "react"
    ],

    "rules": {
      "eqeqeq": 1,
      "new-cap": 1,
      "no-console": 1,
      "no-mixed-requires": [1, true],
      "no-shadow": 1,
      "no-unused-vars": 1,
      "quotes": [1, "double"],
      "semi": [2, "always"],
      "yoda": [1, "always"]
    }
  }
}
